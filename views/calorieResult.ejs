<!-- views/calorieResult.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nutritional Information</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
    <style>
        html, body {
            height: 100%;
        }
        .content {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: calc(100vh - 100px); /* Adjust according to footer height */
            padding: 20px;
        }
    </style>
</head>
<body class="flex flex-col text-gray-800 bg-gray-100">

     <!-- Navigation Bar -->
     <nav class="p-4 text-white bg-green-500">
        <div class="container flex items-center justify-between mx-auto">
            <h1 class="text-xl font-bold">CalorieScan</h1>
            <ul class="flex items-center space-x-4">
                <li><a href="/dashboard" class="hover:text-gray-200">Home</a></li>
                <li><a href="/profile" class="hover:text-gray-200">Profile</a></li>
                <li><a href="/about" class="hover:text-gray-200">About</a></li>
                <li><a href="/settings" class="hover:text-gray-200">Settings</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin/users" class="hover:text-gray-200">Admin</a></li>
                <% } %>
                
                <li>
                    <a href="/logout" class="inline-block px-4 py-2 ml-4 transition duration-200 bg-red-500 rounded-lg hover:bg-red-600">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="flex-grow content">
        <div class="w-full max-w-lg p-8 mx-auto bg-white rounded-lg shadow-lg">
            <h1 class="mb-6 text-3xl font-bold text-center text-green-600">Nutritional Information</h1>
            
            <div class="mb-4">
                <h2 class="text-xl font-semibold">Food Item 1</h2>
                <p class="text-lg"><strong>Food:</strong> <%= foodItem1 %></p>
                <p class="text-lg"><strong>Weight:</strong> <%= weight1 %> grams</p>
            </div>
            
            <% if (foodItem2 && weight2) { %>
            <div class="mb-4">
                <h2 class="text-xl font-semibold">Food Item 2</h2>
                <p class="text-lg"><strong>Food:</strong> <%= foodItem2 %></p>
                <p class="text-lg"><strong>Weight:</strong> <%= weight2 %> grams</p>
            </div>
            <% } %>

            <hr class="my-4">

            <div>
                <h2 class="text-xl font-semibold">Total Nutrition</h2>
                <p class="text-lg"><strong>Calories:</strong> <%= calories %> kcal</p>
                <p class="text-lg"><strong>Protein:</strong> <%= protein %> g</p>
                <p class="text-lg"><strong>Carbohydrates:</strong> <%= carbs %> g</p>
                <p class="text-lg"><strong>Fats:</strong> <%= fats %> g</p>
            </div>

            <!-- Button to calculate again -->
            <div class="mt-8 text-center">
                <a href="/calculator" class="inline-block px-6 py-2 text-white transition duration-200 bg-green-500 rounded-lg hover:bg-green-600">Calculate Again</a>
            </div>
        </div>
    </div>

    <footer class="py-4 text-white bg-green-500">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Nutrition Dashboard. All rights reserved.</p>
        </div>
    </footer>

</body>
</html>