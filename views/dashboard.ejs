<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nutrition Dashboard</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>

<body class="bg-gray-100">

    <!-- Navigation Bar -->
     <!-- Navigation Bar -->
     <nav class="p-4 text-white bg-green-500">
        <div class="container flex items-center justify-between mx-auto">
            <h1 class="text-xl font-bold">CalorieScan</h1>
            <ul class="flex items-center space-x-4">
                <li><a href="/dashboard" class="hover:text-gray-200">Home</a></li>
                <li><a href="/profile" class="hover:text-gray-200">Profile</a></li>
                <li><a href="/about" class="hover:text-gray-200">About</a></li>
                <li><a href="/scan" class="hover:text-gray-200">Scan</a></li>
                <li><a href="/settings" class="hover:text-gray-200">Settings</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin/users" class="hover:text-gray-200">Admin</a></li>
                <% } %>
                
                <li>
                <li>
                    <a href="/logout" class="inline-block px-4 py-2 ml-4 transition duration-200 bg-red-500 rounded-lg hover:bg-red-600">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container p-4 mx-auto my-8">
        <div class="grid items-center justify-center grid-cols-1 mx-48 md:grid-cols-3">
            <!-- Left Section: Greeting and Graph -->
            <div class="col-span-2">
                <h1 class="text-2xl font-semibold text-gray-800">Analytics</h1>
                <div class="max-w-md p-4 mt-4 rounded-lg">
                    <canvas id="nutritionChart" width="400" height="400"></canvas>
                </div>
            </div>

            <!-- Right Section: Cards and View Data Button -->
            <div class="flex flex-col space-y-4">
                <!-- Calorie Calculator Card -->
                <div class="p-6 text-center text-white bg-green-500 rounded-lg shadow-lg">
                    <h2 class="mb-2 text-xl font-bold">Calorie Calculator</h2>
                    <p>Calculate your daily caloric needs.</p>
                    <a href="/calculator" class="inline-block px-4 py-2 mt-4 text-green-500 bg-white rounded-lg hover:bg-gray-200">
                        Open Calculator
                    </a>
                </div>

                <!-- Calorie Tracker Card -->
                <div class="p-6 text-center text-white bg-green-500 rounded-lg shadow-lg">
                    <h2 class="mb-2 text-xl font-bold">Calorie Tracker</h2>
                    <p>Track your daily caloric intake.</p>
                    <a href="/tracker" class="inline-block px-4 py-2 mt-4 text-green-500 bg-white rounded-lg hover:bg-gray-200">
                        Open Tracker
                    </a>
                </div>

                <!-- View User Data Button -->
                <div class="p-6 text-center text-white bg-green-500 rounded-lg shadow-lg">
                    <h2 class="mb-2 text-xl font-bold">User Data</h2>
                    <p>View your recorded nutritional data.</p>
                    <a href="/user-data" class="inline-block px-4 py-2 mt-4 text-green-500 bg-white rounded-lg hover:bg-gray-200">
                        View User Data
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer -->
    <footer class="py-4 text-white bg-green-500">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 Nutrition Dashboard. All rights reserved.</p>
        </div>
    </footer>

    <!-- JavaScript for Chart -->
    <script src="/js/dashboard.js">
        
    </script>
    
</body>

</html>
