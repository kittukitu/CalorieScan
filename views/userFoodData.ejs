<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>User Food Data</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body class="flex flex-col min-h-screen bg-gray-100">
    <!-- Navigation Bar -->
     <!-- Navigation Bar -->
     <nav class="p-4 text-white bg-green-500">
        <div class="container flex items-center justify-between mx-auto">
            <h1 class="text-xl font-bold">CalorieScan</h1>
            <ul class="flex items-center space-x-4">
                <li><a href="/dashboard" class="hover:text-gray-200">Home</a></li>
                <li><a href="/profile" class="hover:text-gray-200">Profile</a></li>
                <li><a href="/about" class="hover:text-gray-200">About</a></li>
                <li><a href="/settings" class="hover:text-gray-200">Settings</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin/users" class="hover:text-gray-200">Admin</a></li>
                <% } %>
                
                <li>
                <li>
                    <a href="/logout" class="inline-block px-4 py-2 ml-4 transition duration-200 bg-red-500 rounded-lg hover:bg-red-600">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="container p-6 mx-auto my-8 bg-white rounded-lg shadow-lg">
        <h2 class="mb-4 text-2xl font-bold text-gray-800">User Food Data</h2>
        <table class="min-w-full bg-white border border-gray-300">
            <thead>
                <tr class="text-white bg-green-500">
                    <th class="px-4 py-3 border-b">Food Item Name</th>
                    <th class="px-4 py-3 border-b">Weight (g)</th>
                    <th class="px-4 py-3 border-b">Calories</th>
                    <th class="px-4 py-3 border-b">Proteins (g)</th>
                    <th class="px-4 py-3 border-b">Carbohydrates (g)</th>
                    <th class="px-4 py-3 border-b">Fats (g)</th>
                    <th class="px-4 py-3 border-b">Date</th>
                </tr>
            </thead>
            <tbody>
                <% foodData.forEach(item => { %>
                    <tr class="text-center odd:bg-gray-100 even:bg-white">
                        <td class="px-4 py-3 border-b"><%= item.name %></td>
                        <td class="px-4 py-3 border-b"><%= item.weight %> g</td>
                        <td class="px-4 py-3 border-b"><%= item.calories %></td>
                        <td class="px-4 py-3 border-b"><%= item.proteins %></td>
                        <td class="px-4 py-3 border-b"><%= item.carbohydrates %></td>
                        <td class="px-4 py-3 border-b"><%= item.fats %></td>
                        <td class="px-4 py-3 border-b"><%= new Date(item.date).toLocaleDateString('en-GB') %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </main>

    <!-- Footer -->
    <footer class="py-4 text-white bg-green-500">
        <div class="container mx-auto text-center">
            <p>&copy; 2024 CalorieScan. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
