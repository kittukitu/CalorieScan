<!-- views/edit-profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/@tailwindcss/browser@4"></script>
</head>
<body class="flex flex-col min-h-screen bg-gray-100">

     <!-- Navigation Bar -->
     <nav class="p-4 text-white bg-green-500">
        <div class="container flex items-center justify-between mx-auto">
            <h1 class="text-xl font-bold">CalorieScan</h1>
            <ul class="flex items-center space-x-4">
                <li><a href="/dashboard" class="hover:text-gray-200">Home</a></li>
                <li><a href="/profile" class="hover:text-gray-200">Profile</a></li>
                <li><a href="/about" class="hover:text-gray-200">About</a></li>
                <li><a href="/settings" class="hover:text-gray-200">Settings</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin/users" class="hover:text-gray-200">Admin</a></li>
                <% } %>
                
                <li>
                <li>
                    <a href="/logout" class="inline-block px-4 py-2 ml-4 transition duration-200 bg-red-500 rounded-lg hover:bg-red-600">Logout</a>
                </li>
            </ul>
        </div>
    </nav>

    <main class="flex-grow">
        <div class="container p-8 mx-auto">
            <div class="max-w-lg p-8 mx-auto bg-white rounded-lg shadow-lg">
                <h2 class="text-2xl font-semibold text-center text-blue-600">Edit Profile</h2>
                <form action="/profile/edit" method="POST" class="mt-6 space-y-4">
                    <div>
                        <label class="block text-sm font-medium">Username</label>
                        <input type="text" name="name" value="<%= user.name %>" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <div>
                        <label class="block text-sm font-medium">Email</label>
                        <input type="email" name="email" value="<%= user.email %>" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <div>
                        <label class="block text-sm font-medium">Phone</label>
                        <input type="tel" name="phone" value="<%= user.phone %>" required class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <!-- Optional Password Update Fields (if needed) -->
                    <!--
                    <div>
                        <label class="block text-sm font-medium">New Password</label>
                        <input type="password" name="password" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    <div>
                        <label class="block text-sm font-medium">Confirm New Password</label>
                        <input type="password" name="confirmPassword" class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-600">
                    </div>
                    -->
                    <button type="submit" class="w-full py-2 text-white bg-blue-600 rounded-md hover:bg-blue-700">Update Profile</button>
                </form>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <%- include('partials/footer') %>
</body>
</html>
